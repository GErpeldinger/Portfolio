{% extends('base.html.twig') %}

{% block title 'Liste des évènements' %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between">
            <a class="btn btn-wild" href="{{ path('admin_index') }}">Retour au dashboard</a>
            <a class="btn btn-wild" href="{{ path('timeline_new') }}">Nouvelle évènement</a>
        </div>
        <h2 class="text-center">Liste des évènements</h2>
        <div class="d-flex justify-content-center align-items-center mt-1">
            <table class="table table-dark table-striped table-hover">
                <thead class="thead-light">
                <tr>
                    <th scope="col" class="text-center">Label</th>
                    <th scope="col" class="text-center">Titre</th>
                    <th scope="col" class="text-center">Date de début</th>
                    <th scope="col" class="text-center">Date de fin</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for timeline in timelines %}
                    <tr>
                        <th scope="row" class="text-center">{{ timeline.label }}</th>
                        <td class="text-center">{{ timeline.title }}</td>
                        <td class="text-center">
                            {% if timeline.noMonth == true %}
                                {{ timeline.startDate | date('Y') }}
                            {% elseif timeline.noDay == true %}
                                {{ timeline.startDate | date('m/Y') }}
                            {% else %}
                                {{ timeline.startDate | date('d/m/Y') }}
                            {% endif %}
                        </td>
                        <td class="text-center">
                            {% if timeline.noMonth == true %}
                                {{ timeline.endDate | date('Y') }}
                            {% elseif timeline.noDay == true %}
                                {{ timeline.endDate | date('m/Y') }}
                            {% else %}
                                {{ timeline.endDate | date('d/m/Y') }}
                            {% endif %}
                        </td>
                        <td>
                            <div class="d-flex justify-content-center">
                                <a class="btn btn-wild" href="{{ path('timeline_show', {'id': timeline.id}) }}"><i class="fas fa-eye"></i></a>
                                <a class="btn btn-wild" href="{{ path('timeline_edit', {'id': timeline.id}) }}"><i class="fas fa-edit"></i></a>
                                <form method="post" action="{{ path('timeline_delete', {'id': timeline.id}) }}"
                                      onsubmit="return confirm('Voulez-vous vraiment supprimer ce projet?');">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ timeline.id) }}">
                                    <button class="btn btn-wild"><i class="far fa-trash-alt"></i></button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
